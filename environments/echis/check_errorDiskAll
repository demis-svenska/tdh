#!/bin/bash
echo "============================================================="
echo "=================checking error on HP server disks==========="
echo "============================================================="
cchq echis run-shell-command hp_server --become "sudo tune2fs -l /dev/sda2 | grep Last\ error"
echo "=============================================="
echo "=================checking error on XVDA2 error================"
echo "=============================================================="
cchq echis run-shell-command xenserver_withAllDisk --become "sudo tune2fs -l /dev/xvda2 | grep Last\ error"
echo "=============================================="
echo "=================checking error on XVDB disk=================="
echo "=============================================================="
cchq echis run-shell-command xenserver_diskB --become "sudo tune2fs -l /dev/xvdb | grep Last\ error"
echo "=============================================="
echo "=================checking error on XVDC disk=================="
echo "=============================================================="
cchq echis run-shell-command xenserver_diskC --become "sudo tune2fs -l /dev/xvdc | grep Last\ error"
